<div class="starter-template">
    <p class="lead" style="font-size: 2.5em">Lets Type</p>
</div>
<div class="col-md-6 container-fluid text-center">
    <form id="sendTweet">
        <input type="text" class="form-control" id="tweet">
        <br><br>
        <button class="btn btn-primary">Tweet</button>
        <br><br>
    </form>
    <div id="tweets">
        {{#each tweets}}
        <div class="media">
            <div class="media-left">
                <a href="/user/{{ owner._id }}"><img class="media-object" src="{{ owner.photo }}" /> </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">{{ owner.name }}</h4>
                <p>{{ content }}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>